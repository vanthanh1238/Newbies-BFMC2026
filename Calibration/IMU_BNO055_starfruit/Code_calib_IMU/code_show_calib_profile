#include <Wire.h>
#include <Adafruit_Sensor.h>
#include <Adafruit_BNO055.h>
#include <utility/imumaths.h>

// Initialize the sensor
Adafruit_BNO055 bno = Adafruit_BNO055(55, 0x28);

void setup(void) {
  Serial.begin(115200);
  while (!Serial) delay(10); // Wait for Serial Monitor

  Serial.println("BNO055 Calibration Profile Exporter");
  Serial.println("------------------------------------");

  if (!bno.begin()) {
    Serial.print("No BNO055 detected. Check wiring/I2C ADDR!");
    while (1);
  }

  bno.setExtCrystalUse(true);
}

void loop(void) {
  uint8_t system, gyro, accel, mag;
  system = gyro = accel = mag = 0;

  // Monitor calibration status
  bno.getCalibration(&system, &gyro, &accel, &mag);

  Serial.print("CALIBRATION STATUS: ");
  Serial.print("Sys:");   Serial.print(system);
  Serial.print(" G:");     Serial.print(gyro);
  Serial.print(" A:");     Serial.print(accel);
  Serial.print(" M:");     Serial.print(mag);
  Serial.println(" (Target: all 3s)");

  // Once fully calibrated (all 3s), print the bytes and halt
  if (system == 3 && gyro == 3 && accel == 3 && mag == 3) {
    printCalibrationBytes();
    
    Serial.println("\nSUCCESS: Calibration complete.");
    Serial.println("You can now copy the uint8_t array above into your main code.");
    while (1); // Halt program
  }

  delay(500); // Check status every half second
}

void printCalibrationBytes() {
  adafruit_bno055_offsets_t offsets;
  
  // Read the 22 bytes from the sensor registers
  if (bno.getSensorOffsets(offsets)) {
    
    // Treat the struct as an array of 22 bytes
    uint8_t *ptr = (uint8_t *)&offsets;

    Serial.println("\n\n--- COPY THIS INTO YOUR MAIN SKETCH ---");
    Serial.print("uint8_t bnoCalibration[22] = {");
    
    for (int i = 0; i < sizeof(offsets); i++) {
      Serial.print("0x");
      if (ptr[i] < 0x10) Serial.print("0"); // Leading zero for clean hex formatting
      Serial.print(ptr[i], HEX);
      
      if (i < sizeof(offsets) - 1) {
        Serial.print(", ");
      }
    }
    
    Serial.println("};");
    Serial.println("---------------------------------------\n");
  } else {
    Serial.println("\nError: Could not retrieve offsets from sensor.");
  }
}
